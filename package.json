{
  "name": "script-common",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm run generate-barrels && pnpm run build:core -t",
    "build-dts": "tsc -p tsconfig.build-browser.json && tsc -p tsconfig.build-node.json && rollup -c rollup.dts.config.js",
    "build:core": "node scripts/build.js",
    "clean": "rimraf packages/*/dist temp .eslintcache",
    "check": "pnpm run type-check && pnpm run fix",
    "type-check": "node --max-old-space-size=4096 ./node_modules/typescript/lib/tsc.js --incremental --noEmit",
    "fix:prettier": "node ./scripts/prettier.cjs",
    "fix:prettier:changed": "pnpm fix:prettier --mode write-changed",
    "fix:eslint": "eslint --fix .",
    "fix": "pnpm fix:eslint && pnpm fix:prettier",
    "generate-barrels": "node ./scripts/barrelsby.cjs",
    "release": "node scripts/release.js --preid",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && pnpm fix:eslint && pnpm fix:prettier:changed",
    "preinstall": "npx only-allow pnpm"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.24.7",
    "@babel/types": "^7.24.7",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "5.0.4",
    "@swc/core": "^1.6.5",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@types/hash-sum": "^1.0.2",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.14.8",
    "@types/react": "^19",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-istanbul": "^1.6.0",
    "@vue/consolidate": "1.0.0",
    "barrelsby": "^2.8.1",
    "commander": "^12.1.0",
    "conventional-changelog-cli": "5.0.0",
    "enquirer": "^2.4.1",
    "esbuild": "^0.21.5",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eslint": "^9.5.0",
    "eslint-plugin-import-x": "^0.5.1",
    "eslint-plugin-vitest": "^0.5.4",
    "estree-walker": "^2.0.2",
    "execa": "^9.3.0",
    "globby": "11.1.0",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "magic-string": "^0.30.10",
    "markdown-table": "^3.0.3",
    "marked": "^12.0.2",
    "minimist": "^1.2.8",
    "npm-run-all2": "^6.2.0",
    "picocolors": "^1.0.1",
    "prettier": "^3.3.2",
    "pug": "^3.0.3",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "semver": "^7.6.2",
    "serve": "^14.2.3",
    "simple-git-hooks": "^2.11.1",
    "terser": "^5.31.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.3",
    "tsx": "^4.15.7",
    "typescript": "~5.4.5",
    "typescript-eslint": "^7.13.1",
    "vite": "^6.1.0",
    "vitest": "^1.6.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript-eslint>eslint": "^9.0.0",
        "@typescript-eslint/eslint-plugin>eslint": "^9.0.0",
        "@typescript-eslint/parser>eslint": "^9.0.0",
        "@typescript-eslint/type-utils>eslint": "^9.0.0",
        "@typescript-eslint/utils>eslint": "^9.0.0"
      }
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.6.2+sha512.47870716bea1572b53df34ad8647b42962bc790ce2bf4562ba0f643237d7302a3d6a8ecef9e4bdfc01d23af1969aa90485d4cebb0b9638fa5ef1daef656f6c1b"
}
